{
  "version": 2,
  "builds": [
    {
      "src": "resume-ai-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "resume-ai-frontend/build"
      }
    },
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/optimize-resume/",
      "destination": "/api/main"
    },
    {
      "source": "/(.*)",
      "destination": "/resume-ai-frontend/$1"
    }
  ]
}